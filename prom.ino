      writeData(4);
      digitalWrite(P_CS,LOW);
      delay(1); //let it cook
      digitalWrite(P_CS,HIGH);
      writeData(0);
      delay(1);
    }
    if (PromData[p][x] & 8){
      writeData(8);
      digitalWrite(P_CS,LOW);
      delay(1); //let it cook
      digitalWrite(P_CS,HIGH);
      writeData(0);
      delay(1);
    }

    digitalWrite(P_CS,HIGH);
    writeData(0);
  }
  Serial.println("Terminer");
  Serial.println("");
  Serial.print("> ");
  
}

